@model IEnumerable<SportClub.Models.Sport>

@{
    ViewBag.Title = "Sports";
}

<h2>Sports</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SportID }) |
                @Html.ActionLink("AddInstructors", "AddInstructors", new { id = item.SportID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SportID })
            </td>
        </tr>
    }

</table>
